# Google Drive API Configuration
# Service Account JSON (get from Google Cloud Console)
GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}'

# Google Drive Folder ID for "TN Legal Site Documents"
# Get this from the folder URL: https://drive.google.com/drive/folders/FOLDER_ID_HERE
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Email SMTP Configuration (for sending notifications)
# Using Gmail SMTP as example
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email addresses
EMAIL_FROM=noreply@tnlegal.ca
EMAIL_TO=info@tnlegal.ca

# Square Payment Configuration
# Get these from: https://developer.squareup.com/apps
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_APPLICATION_ID=your_square_application_id_here
SQUARE_ENVIRONMENT=production
SQUARE_LOCATION_ID=LSQCBQRNYKZBX

# Square Webhook Signature Key (optional, for webhook verification)
# Get this from Square Developer Dashboard > Webhooks
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key_here

# Admin email for order notifications
ADMIN_EMAIL=admin@tnlegal.ca
